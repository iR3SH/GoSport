@model LoginViewModel
@{
}

<h1>Login</h1>
<form class="form-control" method="post" asp-controller="Login" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" type="email" asp-for="Email" required/>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="@Model.Password"></label>
        <input class="form-control" type="password" asp-for="@Model.Password"required />
    </div>
    <div class="form-group">
        <label class="form-check-label" asp-for="@Model.RememberMe"></label>
        <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe" />
        <a asp-controller="Login" asp-action="Register">S'inscrire</a>
    </div>
    <input class="form-control" type="submit" value="Se Connecter" />
</form>